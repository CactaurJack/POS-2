<Window x:Class="mainWindow.EntreeCustomize.CrashedSaucerCustom"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:mainWindow.EntreeCustomize"
        mc:Ignorable="d"
        Title="CrashedSaucerCustom" Height="405" Width="392">
	<Grid>
		<Grid.ColumnDefinitions>
			<ColumnDefinition/>
			<ColumnDefinition/>
		</Grid.ColumnDefinitions>
		<StackPanel>
			<CheckBox Name="Syrup" IsChecked="True">Syrup</CheckBox>
			<CheckBox Name="HalfStack">Half Stack</CheckBox>
			<CheckBox Name="WhippedCream" IsChecked="True">Whipped Creamk</CheckBox>
			<ComboBox Width="150" Height="25" x:Name="Flavor" HorizontalAlignment="Left" >
				<ComboBoxItem Content="Maple"/>
				<ComboBoxItem Content="Cherry"/>
				<ComboBoxItem Content="Blueberry"/>
				<ComboBoxItem Content="Blackberry"/>
				<ComboBoxItem Content="Strawberry"/>
			</ComboBox>
			<Button Click="Done_Click">Done</Button>
		</StackPanel>
	</Grid>
</Window>

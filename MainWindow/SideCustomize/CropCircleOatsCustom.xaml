<Window x:Class="mainWindow.SideCustomize.CropCircleOatsCustom"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:mainWindow.SideCustomize"
        mc:Ignorable="d"
        Title="CropCircleOatsCustom" Height="450" Width="800">
    <Grid>
		<Grid.ColumnDefinitions>
			<ColumnDefinition/>
			<ColumnDefinition/>
		</Grid.ColumnDefinitions>
		<StackPanel>
			<CheckBox Name="Butter" IsChecked="True">Butter</CheckBox>
			<CheckBox Name="Syrup" IsChecked="True">Syrup</CheckBox>
			<ComboBox Width="150" Height="25" x:Name="Flavor" HorizontalAlignment="Left" >
				<ComboBoxItem Content="Maple"/>
				<ComboBoxItem Content="Cherry"/>
				<ComboBoxItem Content="Blueberry"/>
				<ComboBoxItem Content="Blackberry"/>
				<ComboBoxItem Content="Strawberry"/>
			</ComboBox>
			<ComboBox Width="150" Height="25" x:Name="Size" HorizontalAlignment="Left" >
				<ComboBoxItem Content="Small"/>
				<ComboBoxItem Content="Medium"/>
				<ComboBoxItem Content="Large"/>
			</ComboBox>
			<Button Click="Done_Click">Done</Button>
		</StackPanel>
	</Grid>
</Window>

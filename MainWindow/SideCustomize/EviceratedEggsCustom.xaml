<Window x:Class="mainWindow.SideCustomize.EviceratedEggsCustom"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:mainWindow.SideCustomize"
        mc:Ignorable="d"
        Title="EviceratedEggsCustom" Height="450" Width="800">
    <Grid>
		<Grid.ColumnDefinitions>
			<ColumnDefinition/>
			<ColumnDefinition/>
		</Grid.ColumnDefinitions>
		<StackPanel>
			<ComboBox Width="150" Height="25" x:Name="Style" HorizontalAlignment="Left" >
				<ComboBoxItem Content="Scrambled"/>
				<ComboBoxItem Content="Poached"/>
				<ComboBoxItem Content="Hard Boiled"/>
				<ComboBoxItem Content="Sunny Side Up"/>
				<ComboBoxItem Content="Over Easy"/>
				<ComboBoxItem Content="Over Medium"/>
				<ComboBoxItem Content="Over Well"/>
			</ComboBox>
			<ComboBox Width="150" Height="25" x:Name="Size" HorizontalAlignment="Left" >
				<ComboBoxItem Content="Small"/>
				<ComboBoxItem Content="Medium"/>
				<ComboBoxItem Content="Large"/>
			</ComboBox>
			<Button Click="Done_Click">Done</Button>
		</StackPanel>
	</Grid>
</Window>
